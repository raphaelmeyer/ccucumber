#!/bin/bash

set -e

ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

bundler install --path _build/ruby

mkdir -p ${ROOT}/_build
cd ${ROOT}/_build

export CC=clang
export CXX=clang++
cmake ${ROOT} -G Ninja

cd ${ROOT}

cmake --build _build
cmake --build _build --target format

${ROOT}/_build/source/features/wire-server &
cd ${ROOT}/source

#bundler exec cucumber -p done
bundler exec cucumber -p wip

